{
    "env": {
      "browser": true,
      "amd": true,
      "node": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
        "airbnb-base",
        "eslint-config-prettier"
    ],
    "ignorePatterns": [
        "node_modules/",
        "e2e",
        "karma.conf.js"
    ],
    "parserOptions": {
      "ecmaVersion": 2020, 
      "sourceType": "module"
    },
    "rules": {
      "comma-dangle": "off",
      "comma-spacing": "off",
      "space-in-parens": "warn",
      "no-multi-spaces": "warn",
      "no-console": "off",
      "no-var": "warn",
      "no-const-assign": "off",
      "no-constant-condition": "off",
      "no-new-object": "warn",
      "no-unused-vars": "off",
      "extensions": "off",
      "quotes": ["error", "single", {
          "allowTemplateLiterals": true
      }],
      "key-spacing": ["error", {
          "beforeColon": false
      }],
      "prettier/prettier": [
          "error",
          {
              "singleQuote": true
          }
      ],
      "import/extensions": "off",
      "import/no-unresolved": "off"
    }
    
  }
